# ============================================================================
# Endee Configuration
# ============================================================================

# Base URL for Endee vector database
ENDEE_BASE_URL=http://localhost:8080/api/v1

# Authentication token for Endee (if required)
# ENDEE_TOKEN=your_token_here

# Index name in Endee
ENDEE_INDEX_NAME=research_assistant

# Vector embedding dimension (must match embedding model output)
VECTOR_DIM=384

# Space type for distance calculation
# Options: cosine, l2, ip
SPACE_TYPE=cosine


# ============================================================================
# Embedding Model Configuration
# ============================================================================

# Sentence-Transformers model to use
# Small & Fast: sentence-transformers/all-MiniLM-L6-v2 (384 dim)
# Balanced: sentence-transformers/all-mpnet-base-v2 (768 dim)
# Large & Best: sentence-transformers/all-roberta-large-v1 (1024 dim)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Device for embedding computation
# Options: cpu, cuda (GPU), mps (Apple Silicon)
EMBEDDING_DEVICE=cpu

# Batch size for embedding computation
EMBEDDING_BATCH_SIZE=32


# ============================================================================
# LLM Configuration for Question Answering
# ============================================================================

# LLM Provider
# Options: openai, anthropic, ollama, local
LLM_PROVIDER=openai

# Model name
# OpenAI: gpt-4, gpt-4-turbo, gpt-3.5-turbo
# Anthropic: claude-3-opus, claude-3-sonnet, claude-3-haiku
LLM_MODEL=gpt-3.5-turbo

# API Key for LLM provider
LLM_API_KEY=your_api_key_here

# Base URL for custom LLM endpoints (optional)
# LLM_BASE_URL=http://localhost:8000

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000


# ============================================================================
# Retrieval Settings
# ============================================================================

# Number of documents to retrieve for context
TOP_K=5

# Minimum similarity score for retrieved documents (0.0 to 1.0)
# Lower values = more retrieval but potentially less relevant
SIMILARITY_THRESHOLD=0.3


# ============================================================================
# Document Processing Settings
# ============================================================================

# Size of each document chunk in characters
CHUNK_SIZE=800

# Overlap between consecutive chunks in characters
CHUNK_OVERLAP=100


# ============================================================================
# Application Settings
# ============================================================================

# Logging level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable debug mode for development
DEBUG=false
